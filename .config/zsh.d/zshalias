alias cat='bat'

alias cd='z'

alias youtube-dl='yt-dlp'

# Shotcuts
alias g='git'
alias gi='git init'
alias ga='git add .'
alias gc='git commit -m'
alias gcl='git clone'
alias gp='git push'
alias gs='git submodule'
alias gsi='git submodule init'
